<Page
    x:Class="RelativePanelStudy.Views.Main"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RelativePanelStudy.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='2' x:Name="WindowStates">
                <VisualState x:ConnectionId='3' x:Name="WideScreen">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="700"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MyRelativePanel.Width" Value="700"/>
                        <Setter Target="MyRelativePanel.Height" Value="450"/>

                        <Setter Target="RedRect.Width" Value="75"/>
                        <Setter Target="RedRect.Height" Value="75"/>
                        <Setter Target="BlueRect.Width" Value="75"/>
                        <Setter Target="BlueRect.Height" Value="75"/>
                        <Setter Target="YellowRect.MinHeight" Value="75"/>
                        <Setter Target="GreenRect.MinHeight" Value="75"/>
                        <Setter Target="FlipView_Button.Height" Value="50"/>
                        <Setter Target="GridView_Button.Height" Value="50"/>

                        <Setter Target="FlipView_Button.FontSize" Value="26"/>
                        <Setter Target="GridView_Button.FontSize" Value="26"/>

                        <Setter Target="FlipView_Button.Width" Value="150"/>
                        <Setter Target="GridView_Button.Width" Value="150"/>


                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='4' x:Name="NarrowScreen">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MyRelativePanel.Width" Value="500"/>
                        <Setter Target="MyRelativePanel.Height" Value="400"/>

                        <Setter Target="RedRect.Width" Value="50"/>
                        <Setter Target="RedRect.Height" Value="50"/>
                        <Setter Target="BlueRect.Width" Value="50"/>
                        <Setter Target="BlueRect.Height" Value="50"/>
                        <Setter Target="GreenRect.MinHeight" Value="50"/>
                        <Setter Target="YellowRect.MinHeight" Value="50"/>
                        <Setter Target="FlipView_Button.Height" Value="30"/>
                        <Setter Target="GridView_Button.Height" Value="30"/>

                        <Setter Target="FlipView_Button.FontSize" Value="14"/>
                        <Setter Target="GridView_Button.FontSize" Value="14"/>

                        <Setter Target="FlipView_Button.Width" Value="80"/>
                        <Setter Target="GridView_Button.Width" Value="80"/>


                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='5' x:Name="WidestScreen">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1008"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MyRelativePanel.Width" Value="850"/>
                        <Setter Target="MyRelativePanel.Height" Value="600"/>

                        <Setter Target="RedRect.Width" Value="100"/>
                        <Setter Target="RedRect.Height" Value="100"/>
                        <Setter Target="BlueRect.Width" Value="100"/>
                        <Setter Target="BlueRect.Height" Value="100"/>
                        <Setter Target="GreenRect.MinHeight" Value="100"/>
                        <Setter Target="YellowRect.MinHeight" Value="100"/>
                        <Setter Target="FlipView_Button.Height" Value="73"/>
                        <Setter Target="GridView_Button.Height" Value="73"/>

                        <Setter Target="FlipView_Button.FontSize" Value="42"/>
                        <Setter Target="GridView_Button.FontSize" Value="42"/>

                        <Setter Target="FlipView_Button.Width" Value="200"/>
                        <Setter Target="GridView_Button.Width" Value="200"/>

                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <RelativePanel x:ConnectionId='6' x:Name="MyRelativePanel" BorderBrush="Gray" BorderThickness="10" Width="850" Height="600">
            <Rectangle x:ConnectionId='7' x:Name="RedRect" Fill="Red" Height="100" Width="100"/>
            <Rectangle x:ConnectionId='8' x:Name="BlueRect" Fill="Blue" Height="100" Width="100" 
               RelativePanel.RightOf="RedRect"/>
            <Rectangle x:ConnectionId='9' x:Name="GreenRect" Fill="Green" MinHeight="100" Margin="0,5,0,0" 
               RelativePanel.Below="RedRect" 
               RelativePanel.AlignLeftWith="RedRect" 
               RelativePanel.AlignRightWith="BlueRect"/>
            <Rectangle x:ConnectionId='10' x:Name="YellowRect" Fill="Yellow" MinHeight="100" 
               RelativePanel.Below="GreenRect" 
               RelativePanel.AlignLeftWith="BlueRect" 
               RelativePanel.AlignRightWithPanel="True"/>
               
            <Button x:ConnectionId='11' x:Name="FlipView_Button" RelativePanel.Below="YellowRect" Width="200" Height="73" Content="Flip View" FontSize="42" RelativePanel.AlignHorizontalCenterWith="YellowRect"                               ToolTipService.ToolTip="Go To FlipView"/>
            <Button x:ConnectionId='12' x:Name="GridView_Button" RelativePanel.Below="YellowRect" RelativePanel.RightOf="FlipView_Button" Width="200" Height="73" Content="Grid View" FontSize="42" Margin="20,0,0,0"                               >
                <ToolTipService.ToolTip>
                    <Image Source="/Assets/Images/Grid.png"/>
                </ToolTipService.ToolTip>
            </Button>
        </RelativePanel>
        
    </Grid>
</Page>


<Page
    x:Class="PivotUI.Views.LanguageSelectPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PivotUI.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    NavigationCacheMode="Required"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/Images/Background.png"/>
        </Grid.Background>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <RadioButton x:ConnectionId='3' GroupName="Language" x:Name="English" Content="English" Foreground="White" IsChecked="True"                          />
            <RadioButton x:ConnectionId='4' GroupName="Language" x:Name="Chinese" Content="中文" Foreground="White"                           FontFamily="SimSun"/>
            <RadioButton x:ConnectionId='5' GroupName="Language" x:Name="Arabic"  Content="العربية" Foreground="White"                           FontFamily="Times New Roman"/>
        </StackPanel>
        
        <Button x:ConnectionId='2' x:Uid="Enter" x:Name="next" Content="Enter" HorizontalAlignment="Center" VerticalAlignment="Center" Background="White" Margin="0,200,0,0"                   />

    </Grid>
</Page>


<UserControl
    x:Class="PivotUI.Controls.VideoUI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PivotUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="650"
    d:DesignWidth="1280">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition x:ConnectionId='2' Width="40*" x:Name="First"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>

        <Image x:ConnectionId='3'  HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Source="/Assets/Images/image 3.png" 
                x:Name="ImageAero"
                Height="357" 
                Width="637"
                Grid.Column="1"
                Grid.ColumnSpan="3" Margin="64,88,0,0"
                />

        <Image  HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Grid.Row="0" 
                Source="/Assets/Images/Capture1.PNG" 
                Margin="75,36,0,0" 
                Height="31" 
                Width="70" />

        <TextBlock  Margin="80,72,0,0" 
                    HorizontalAlignment="Left" 
                    TextWrapping="Wrap" 
                    VerticalAlignment="Top" 
                    Height="31" Text="VIDEO" 
                    Foreground="White" 
                    FontFamily="/Assets/Fonts/Geo.otf#Geogrotesque"
                    FontSize="28" 
                     
                    FontWeight="Normal" />

        <TextBlock  HorizontalAlignment="Left" 
                    Margin="80,120,0,0" 
                    Text="Adjust your audio EQ to your liking and save them in one of three preset slots, or choose from our EQ profiles" 
                    Foreground="#FF817C7C" 
                    FontFamily="/Assets/Fonts/Geo.otf#Geogrotesque"
                    TextWrapping="Wrap" 
                    VerticalAlignment="Top" 
                    Height="85" 
                    Width="388" 
                    FontSize="16" />

        <Image  HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Source="/Assets/Images/Profile.png" 
                Margin="32,217,0,0" 
                RenderTransformOrigin="0.42,0.756" 
                Height="35" 
                Width="40"/>

        <Image  HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Source="/Assets/Images/slowicon.png" 
                Margin="32,327,0,0" 
                RenderTransformOrigin="0.42,0.756" 
                Height="35" 
                Width="35"/>

        <Image  HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Source="/Assets/Images/slowicon.png" 
                Margin="32,417,0,0" 
                RenderTransformOrigin="0.42,0.756" 
                Height="35" 
                Width="35"/>

        <TextBlock HorizontalAlignment="Left" 
                   Margin="80,210,0,0" 
                   Text="Xbox" 
                   TextWrapping="Wrap" 
                   VerticalAlignment="Top" 
                   Height="33" 
                   Width="102" 
                   FontSize="20"
                   FocusVisualPrimaryBrush="White" 
                   Foreground="#FFFDF6F6" 
                   FontWeight="Bold" />

        <TextBlock HorizontalAlignment="Left" 
                   Margin="80,318,0,0" 
                   Text="Resolution/FPS" 
                   TextWrapping="Wrap" 
                   VerticalAlignment="Top" 
                   Height="33" 
                   Width="152" 
                   FontSize="20" 
                   FocusVisualPrimaryBrush="White" 
                   Foreground="#FFFDF6F6" 
                   FontWeight="Bold"/>

        <TextBlock HorizontalAlignment="Left" 
                   Margin="80,408,0,0" 
                   Text="Video Format" 
                   TextWrapping="Wrap" 
                   VerticalAlignment="Top"
                   Height="33" 
                   Width="152" 
                   FontSize="20" 
                   FocusVisualPrimaryBrush="White" 
                   Foreground="#FFFDF6F6" 
                   FontWeight="Bold"/>

        <Button x:ConnectionId='4' x:Name="btXbox" 
                FontFamily="Segoe MDL2 Assets" 
                Content="&#xE76C;" 
                Margin="420,215,0,0" 
                VerticalAlignment="Top" 
                Height="40" 
                Width="40" 
                
                FontSize="16" 
                FontWeight="Bold" 
                Background="#00000000" 
                Foreground="White" />

        <Button x:ConnectionId='5' x:Name="btResolution" 
                FontFamily="Segoe MDL2 Assets" 
                Content="&#xE76C;" 
                Margin="420,325,0,0" 
                VerticalAlignment="Top" 
                Height="40" 
                Width="40" 
               
                FontSize="16" 
                FontWeight="Bold" 
                Background="#00000000" 
                Foreground="White" />

        <Button x:ConnectionId='6' x:Name="btVideo" 
                FontFamily="Segoe MDL2 Assets" 
                Content="&#xE76C;" 
                Margin="420,415,0,0" 
                VerticalAlignment="Top"
                Height="40" 
                Width="40"
               
                FontSize="16" 
                FontWeight="Bold" 
                Background="#00000000" 
                Foreground="White" />

        <TextBlock HorizontalAlignment="Left" 
                   Margin="80,444,0,0" 
                   Text="MP4" 
                   TextWrapping="Wrap" 
                   VerticalAlignment="Top"
                   Height="33" 
                   Width="152"
                   FontSize="17" 
                   FocusVisualPrimaryBrush="White" 
                   Foreground="#FFFF5A01" 
                   FontWeight="Bold"
                   FontFamily="Times New Roman"/>

        <TextBlock x:ConnectionId='7' x:Name="resolution_text"
                   HorizontalAlignment="Left" 
                   Margin="80,352,0,0" 
                   Text="1080p - 60 FPS" 
                   TextWrapping="Wrap" 
                   VerticalAlignment="Top" 
                   Height="33"
                   Width="152" 
                   FontSize="17" FocusVisualPrimaryBrush="White" Foreground="#FFFF5A01" FontWeight="Bold" FontFamily="Times New Roman"/>
        <TextBlock x:ConnectionId='8' x:Name="profile_check_text" 
                   HorizontalAlignment="Left" 
                   Margin="80,242,0,0" 
                   Text="Active Profile" 
                   TextWrapping="Wrap" 
                   VerticalAlignment="Top" 
                   Height="33" 
                   Width="130" 
                   FontSize="17" 
                   FocusVisualPrimaryBrush="White" 
                   Foreground="#FFFF5A01" 
                   FontWeight="Bold" 
                   FontFamily="Times New Roman" />

        <TextBlock  HorizontalAlignment="Left" 
                    Margin="80,280,0,0" 
                    Text="VIDEO OUTPUT" 
                    Foreground="#FF817C7C" 
                    TextWrapping="Wrap" 
                    VerticalAlignment="Top" 
                    Height="27" 
                    Width="115" 
                    FontSize="15"/>

        <TextBlock  HorizontalAlignment="Left" 
                    
                    Text="Output: " 
                    Foreground="#FF817C7C" 
                    TextWrapping="Wrap" 
                    VerticalAlignment="Top" 
                    Height="49"
                    Width="100" 
                    FontSize="16"
                    Grid.Column="1"
                    Grid.ColumnSpan="2" Margin="64,454,0,0"/>

        <TextBlock  HorizontalAlignment="Left" 
                    Grid.Column="1" Grid.ColumnSpan="2"
                    Margin="122,454,0,0"
                    Text="{Binding ElementName=resolution_text , Path=Text}" 
                    Foreground="#FF817C7C" 
                    TextWrapping="Wrap" 
                    VerticalAlignment="Top" 
                    Height="49"
                    Width="138" 
                    FontSize="16"/>

        <Border HorizontalAlignment="Left" 
                VerticalAlignment="Top"
                Margin="203,240,0,0" 
                Padding="5" 
                BorderThickness="1" 
                Background="#FFFF5A01" 
                CornerRadius="13" 
                Height="23" 
                Width="50">

            <TextBlock Text="48V" 
                       HorizontalAlignment="Left" 
                       Width="61" 
                       Margin="6,-4,0,-8" 
                       Foreground="White" 
                       FontWeight="Bold"/>

        </Border>
    </Grid>
</UserControl>


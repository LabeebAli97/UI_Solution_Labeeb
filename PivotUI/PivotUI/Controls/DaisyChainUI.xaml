                VerticalAlignment="Top" 
                Grid.Row="0" 
                Source="/Assets/Images/Capture1.PNG" 
                Margin="75,36,0,0" 
                Height="25" 
                Width="70" />

        <TextBlock  Margin="80,72,0,0" 
                    HorizontalAlignment="Left" 
                    TextWrapping="Wrap" 
                    VerticalAlignment="Top" 
                    Height="31" Text="DAISY CHAIN" 
                    Foreground="White" 
                    FontFamily="/Assets/Fonts/Geo.otf#Geogrotesque"
                    FontSize="28" 
                     
                    FontWeight="Bold" />

        <TextBlock  HorizontalAlignment="Left" 
                    Margin="80,120,0,0" 
                    Text="Your A30 will auto detect if the boom mic is connected, but profiles need to be changed manually" 
                    Foreground="#FF817C7C" 
                    FontFamily="/Assets/Fonts/Geo.otf#Geogrotesque"
                    TextWrapping="Wrap" 
                    VerticalAlignment="Top" 
                    Height="50" 
                    Width="370" 
                    FontSize="16" />

        <RelativePanel x:Name="listPanel">
            <ListView Style="{StaticResource ListViewStyle1}" x:Name="ChainList" Background="Transparent" Padding="4" Margin="73,230,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" SelectionChanged="ChainList_SelectionChanged"  Width="270" Height="auto" MaxHeight="320" >
                <ListView.Resources>
                    <SolidColorBrush x:Key="ListViewItemBackgroundSelected" Color="Transparent" />
                    <SolidColorBrush x:Key="ListViewItemBackgroundSelectedPointerOver" Color="Transparent" />
                    <SolidColorBrush x:Key="ListViewItemBackgroundSelectedPressed" Color="Transparent" />

                </ListView.Resources>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="model:ChainListItems">
                        <Grid Width="236" Height="50" x:Name="ItemGrid">
                            <StackPanel Orientation="Horizontal" Width="262" Margin="-11,0,0,0">
                                <Border x:Name="selectedRect" Background="#FF3600" Width="6" Height="50" Margin="0,0,0,0" HorizontalAlignment="Left" Opacity="{Binding RectOpacity,Mode=TwoWay}"/>
                                <Image Source="/Assets/Images/Chainnew.png" Width="25" Height="25" HorizontalAlignment="Left" Margin="6,0,0,0"/>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock x:Name="name" Text="{Binding Name}" FontFamily="/Assets/Fonts/Geo.otf#Geogrotesque" VerticalAlignment="Center"  HorizontalAlignment="Left" FontSize="16" Foreground="White" Margin="10,10,0,0"/>
                                    <TextBlock x:Name="conn" Text="{Binding Connection,Mode=TwoWay}" FontFamily="/Assets/Fonts/Geo.otf#Geogrotesque" VerticalAlignment="Center"  HorizontalAlignment="Left" FontSize="12" Foreground="{Binding Colour,Mode=TwoWay}" Margin="10,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                                
                            <Button x:Name="listBtn" FontFamily="Segoe MDL2 Assets" Content="&#xE76C;" VerticalAlignment="Center" HorizontalAlignment="Right" Height="30" Width="30" FontSize="12" FontWeight="Bold" Background="#00000000" Foreground="White" Click="Button_Click" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="#FF151515"/>
                        <Setter Property="Margin" Value="0,1.5,0,0"/>
                        <Setter Property="Height" Value="50"/>
                    </Style>
                </ListView.ItemContainerStyle>

            </ListView>

            <StackPanel Orientation="Horizontal" Background="#FF151515" Height="50" Width="262" RelativePanel.Below="ChainList" RelativePanel.AlignHorizontalCenterWith="ChainList" Margin="73,-2,0,0">
                <TextBlock Text="New Chain" Foreground="#FF3600" VerticalAlignment="Center" FontFamily="/Assets/Fonts/Geo.otf#Geogrotesque" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="55,0,0,0"/>
                <Button Style="{StaticResource ButtonStyle1}" FontWeight="Bold" x:Name="btn" Height="20" Width="20" FontFamily="Segoe MDL2 Assets"  Content="&#xE710;" Foreground="#FF3600" VerticalAlignment="Center" FontSize="11" Click="btn_Click" Margin="98,0,0,0"/>
            </StackPanel>
        </RelativePanel>

        <Popup Grid.ColumnSpan="3" VerticalOffset="-150" HorizontalOffset="0" VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="ChainCreatePopup">
            <Border Background="#FF252525" Width="300" Height="280">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
                    <TextBlock Text="CREATE NEW CHAIN" FontSize="24" HorizontalAlignment="Center" Margin="0,40,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="/Assets/Fonts/Geo.otf#Geogrotesque" FontWeight="Bold"/>
                    <TextBox x:Name="createText" Style="{StaticResource TextBoxStyle1}" FontSize="16" Width="250" Margin="0,50,0,0" Background="Transparent" FontFamily="/Assets/Fonts/Geo.otf#Geogrotesque" Foreground="#FF3600" HorizontalAlignment="Center" TextAlignment="Center"/>
                    <Button Style="{StaticResource ButtonStyle3}" x:Name="chainAdd" Content="CREATE CHAIN" Click="chainAdd_Click" Margin="0,20,0,0" FontSize="16" Background="#FF3600" Foreground="Black"  Width="250" Height="40" FontWeight="SemiBold" FontFamily="/Assets/Fonts/Geo.otf#Geogrotesque"/>
                    <Button Style="{StaticResource ButtonStyle2}" x:Name="btnCancel" Content="CANCEL" Click="ClosePopupClicked" Margin="0,10,0,0" FontSize="16" Background="Transparent" BorderBrush="Gray" Foreground="White"  Width="250" Height="40" FontWeight="SemiBold" FontFamily="/Assets/Fonts/Geo.otf#Geogrotesque"/>
                </StackPanel>
            </Border>
        </Popup>

    </Grid>
</UserControl>
